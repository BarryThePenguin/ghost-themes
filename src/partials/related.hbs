
<section class="related-posts">
	{{#get "posts" limit="3" filter="tags:[{{tags[*].slug}}]+id:-{{id}}" include="tags" as |related|}}
	  <h4 class="mb-6">
			Related posts
		</h4>
	  <ul class="list-disc list-inside">
	    {{#foreach related}}
	    	<li>
					<a href="{{url}}">{{title}}</a>
				</li>
	    {{/foreach}}
	  </ul>
	{{/get}}
</section>
